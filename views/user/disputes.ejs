<div class="max-w-5xl mx-auto">
  <div class="mb-10">
    <h1 class="text-4xl font-black text-gray-900 dark:text-white tracking-tight">Support Center</h1>
    <p class="text-gray-500 dark:text-gray-400 mt-2 font-medium">Resolution center for transaction disputes and technical assistance.</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
    <!-- Sidebar -->
    <div class="lg:col-span-4 space-y-6">
      <nav class="card p-2 space-y-1 border-none shadow-xl">
        <a href="/profile" class="flex items-center px-6 py-4 text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700/30 rounded-xl font-bold transition">
          <i class="fas fa-user-circle w-8 opacity-50"></i> General
        </a>
        <a href="/profile/notifications" class="flex items-center px-6 py-4 text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700/30 rounded-xl font-bold transition">
          <i class="fas fa-bell w-8 opacity-50"></i> Notifications
        </a>
        <a href="/profile/disputes" class="flex items-center px-6 py-4 bg-primary-600 text-white rounded-xl font-bold shadow-lg shadow-primary-500/30">
          <i class="fas fa-gavel w-8"></i> My Disputes
        </a>
        <a href="/verification" class="flex items-center px-6 py-4 text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700/30 rounded-xl font-bold transition">
          <i class="fas fa-id-card w-8 opacity-50"></i> Verification
        </a>
      </nav>

      <div class="card bg-primary-600 text-white border-none p-8 shadow-xl">
        <h4 class="font-black text-lg mb-4 flex items-center">
          <i class="fas fa-headset mr-2"></i> 24/7 Support
        </h4>
        <p class="text-sm text-primary-100 mb-6 leading-relaxed">Our specialized support agents are ready to assist you with any platform-related issues.</p>
        <div class="space-y-4">
           <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center"><i class="fas fa-envelope"></i></div>
              <span class="text-sm font-bold"><%= process.env.SUPPORT_EMAIL %></span>
           </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="lg:col-span-8 space-y-10">
      <!-- New Dispute Form -->
      <div class="card border-none shadow-xl p-8">
        <h3 class="text-2xl font-black text-gray-900 dark:text-white mb-8 tracking-tight">Open a New Ticket</h3>
        <form action="/profile/disputes" method="POST" class="space-y-8">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <div class="space-y-6">
            <div>
              <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-3">Issue Description</label>
              <textarea name="reason" required class="w-full bg-gray-50 dark:bg-gray-900 border-2 border-transparent focus:border-primary-500 rounded-2xl p-6 font-bold outline-none transition-all" rows="4" placeholder="Describe the transaction or technical issue in detail..."></textarea>
            </div>

            <div>
              <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-3">Transaction ID <span class="text-[10px] lowercase italic">(Optional)</span></label>
              <div class="relative">
                 <i class="fas fa-receipt absolute left-4 top-1/2 -translate-y-1/2 text-gray-300"></i>
                 <input type="text" name="transactionId" class="w-full bg-gray-50 dark:bg-gray-900 border-2 border-transparent focus:border-primary-500 rounded-xl py-4 pl-12 font-bold outline-none transition-all" placeholder="e.g. 5f9b...">
              </div>
            </div>
          </div>

          <button type="submit" class="w-full btn-primary py-4 text-lg shadow-xl shadow-primary-500/20">
            Submit Support Request
          </button>
        </form>
      </div>

      <!-- Dispute List -->
      <div class="space-y-6">
        <h3 class="text-2xl font-black text-gray-900 dark:text-white tracking-tight">Ticket History</h3>
        <% if (disputes.length === 0) { %>
          <div class="card py-20 text-center border-none shadow-xl bg-gray-50 dark:bg-gray-800/50">
            <i class="fas fa-clipboard-check text-5xl text-gray-200 mb-4 block"></i>
            <p class="text-gray-500 font-bold uppercase tracking-widest text-xs">All clear! No active disputes found.</p>
          </div>
        <% } %>
        <% disputes.forEach(d => { %>
          <div class="card border-none shadow-xl p-8 hover:translate-x-1 transition-transform">
            <div class="flex justify-between items-start mb-6">
              <div class="flex items-center gap-3">
                <span class="px-3 py-1 rounded-lg text-[10px] font-black uppercase tracking-widest <%= d.status === 'Open' ? 'bg-blue-100 text-blue-700' : (d.status === 'Resolved' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700') %>">
                  <%= d.status %>
                </span>
                <span class="text-xs text-gray-400 font-bold"><%= d.createdAt.toDateString() %></span>
              </div>
              <span class="text-[10px] font-mono opacity-30">#<%= d._id.toString().slice(-8) %></span>
            </div>
            <p class="font-bold text-gray-800 dark:text-gray-200 leading-relaxed"><%= d.reason %></p>

            <% if (d.adminResponse) { %>
              <div class="mt-8 p-6 bg-primary-50 dark:bg-primary-900/10 rounded-2xl border border-primary-100 dark:border-primary-800">
                <div class="flex items-center gap-2 mb-3">
                   <div class="w-6 h-6 bg-primary-600 rounded-full flex items-center justify-center text-[10px] text-white"><i class="fas fa-check"></i></div>
                   <p class="text-[10px] font-black text-primary-600 uppercase tracking-widest">Resolution Response</p>
                </div>
                <p class="text-sm text-gray-700 dark:text-gray-300 font-medium leading-relaxed"><%= d.adminResponse %></p>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
