<div class="space-y-8">
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Transaction History</h1>
      <p class="text-gray-500 dark:text-gray-400 mt-1">Detailed record of your financial activities.</p>
    </div>
    <div class="flex items-center gap-2">
      <button class="btn bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-sm text-sm">
        <i class="fas fa-filter mr-2 opacity-50"></i> Filter
      </button>
      <button class="btn bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-sm text-sm">
        <i class="fas fa-download mr-2 opacity-50"></i> Export
      </button>
    </div>
  </div>

  <div class="card p-0 overflow-hidden shadow-xl border-none">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-800">
        <thead class="bg-gray-50 dark:bg-gray-900/50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Transaction</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Amount</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Status</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Date & Time</th>
            <th class="px-6 py-4 text-right text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Action</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-100 dark:divide-gray-700/50">
          <% transactions.forEach(tx => { %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10 flex items-center justify-center rounded-xl <%= tx.type === 'Deposit' ? 'bg-green-100 text-green-600' : (tx.type === 'Withdrawal' ? 'bg-red-100 text-red-600' : 'bg-blue-100 text-blue-600') %>">
                    <i class="fas <%= tx.type === 'Deposit' ? 'fa-arrow-down' : (tx.type === 'Withdrawal' ? 'fa-arrow-up' : (tx.type === 'Transfer' ? 'fa-exchange-alt' : 'fa-cog')) %>"></i>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-bold text-gray-900 dark:text-white"><%= tx.type %></div>
                    <div class="text-[10px] text-gray-500 font-mono mt-0.5"><%= tx.referenceIds.internal %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-extrabold <%= tx.type === 'Deposit' || tx.type === 'Refund' ? 'text-green-600' : 'text-gray-900 dark:text-white' %>">
                  <%= tx.type === 'Deposit' || tx.type === 'Refund' ? '+' : '-' %> <%= tx.amount.toLocaleString() %> <%= tx.currency %>
                </div>
                <% if (tx.fee > 0) { %>
                  <div class="text-[10px] text-gray-400 italic">Fee: <%= tx.fee %> <%= tx.currency %></div>
                <% } %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold <%= tx.status === 'Completed' ? 'bg-green-100 text-green-800' : (tx.status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                  <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= tx.status === 'Completed' ? 'bg-green-400' : (tx.status === 'Pending' ? 'bg-yellow-400' : 'bg-red-400') %>"></span>
                  <%= tx.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
                <div class="font-medium"><%= tx.createdAt.toLocaleDateString() %></div>
                <div class="text-xs opacity-50"><%= tx.createdAt.toLocaleTimeString() %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <button class="text-primary-600 hover:text-primary-900 dark:hover:text-primary-400 transition">
                   <i class="fas fa-ellipsis-h"></i>
                </button>
              </td>
            </tr>
          <% }) %>
          <% if (transactions.length === 0) { %>
            <tr>
              <td colspan="5" class="px-6 py-24 text-center">
                <div class="flex flex-col items-center">
                  <i class="fas fa-receipt text-6xl text-gray-200 mb-4"></i>
                  <p class="text-gray-500 font-medium">No transactions found.</p>
                  <a href="/deposit" class="text-primary-600 font-bold mt-2 hover:underline">Make your first deposit</a>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
