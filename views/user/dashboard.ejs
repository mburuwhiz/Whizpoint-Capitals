<div class="space-y-8">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Welcome back, <%= user.email.split('@')[0] %>!</h1>
    <div class="flex space-x-2">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= user.verificationStatus === 'Verified' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400' %>">
        <i class="fas <%= user.verificationStatus === 'Verified' ? 'fa-check-circle' : 'fa-clock' %> mr-1"></i>
        <%= user.verificationStatus %>
      </span>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% wallets.forEach(wallet => { %>
      <div class="card bg-gradient-to-br from-primary-600 to-primary-800 text-white border-none shadow-lg transform hover:-translate-y-1 transition duration-300">
        <div class="flex justify-between items-start mb-4">
          <div>
            <p class="text-primary-100 text-sm font-medium uppercase tracking-wider"><%= wallet.currency %> Wallet</p>
            <h3 class="text-3xl font-bold mt-1"><%= wallet.balance.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></h3>
          </div>
          <div class="p-3 bg-white/10 rounded-lg">
            <i class="fas fa-wallet text-xl"></i>
          </div>
        </div>
        <div class="flex justify-between text-sm text-primary-100 border-t border-white/10 pt-4">
          <span>Locked: <%= wallet.lockedBalance %></span>
          <a href="/wallets" class="hover:underline font-medium">Manage <i class="fas fa-chevron-right ml-1"></i></a>
        </div>
      </div>
    <% }) %>
    <% if (wallets.length === 0) { %>
      <div class="card flex flex-col items-center justify-center py-12 border-dashed">
        <i class="fas fa-plus-circle text-4xl text-gray-300 mb-4"></i>
        <p class="text-gray-500">No active wallets</p>
        <a href="/wallets" class="text-primary-600 font-bold mt-2">Open a Wallet</a>
      </div>
    <% } %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Recent Transactions -->
    <div class="lg:col-span-2 space-y-4">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white text-gray-900 dark:text-white">Recent Transactions</h2>
        <a href="/transactions" class="text-primary-600 hover:underline text-sm font-medium">View all</a>
      </div>
      <div class="card p-0 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800/50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% transactions.forEach(tx => { %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 flex items-center justify-center rounded-full <%= tx.type === 'Deposit' ? 'bg-green-100 text-green-600' : 'bg-blue-100 text-blue-600' %>">
                        <i class="fas <%= tx.type === 'Deposit' ? 'fa-arrow-down' : (tx.type === 'Withdrawal' ? 'fa-arrow-up' : 'fa-exchange-alt') %>"></i>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900 dark:text-white"><%= tx.type %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm <%= tx.type === 'Deposit' ? 'text-green-600' : (tx.type === 'Withdrawal' ? 'text-red-600' : 'text-gray-900 dark:text-white') %> font-bold">
                      <%= tx.type === 'Deposit' ? '+' : '-' %><%= tx.amount %> <%= tx.currency %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= tx.status === 'Completed' ? 'bg-green-100 text-green-800' : (tx.status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                      <%= tx.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= tx.createdAt.toLocaleDateString() %>
                  </td>
                </tr>
              <% }) %>
              <% if (transactions.length === 0) { %>
                <tr><td colspan="4" class="px-6 py-12 text-center text-gray-500">No transactions yet.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="space-y-4">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white">Quick Actions</h2>
      <div class="grid grid-cols-2 gap-4">
        <a href="/deposit" class="card p-4 flex flex-col items-center hover:border-primary-500 transition group text-center">
          <i class="fas fa-plus-circle text-2xl text-primary-600 mb-2 group-hover:scale-110 transition"></i>
          <span class="text-sm font-bold">Deposit</span>
        </a>
        <a href="/withdraw" class="card p-4 flex flex-col items-center hover:border-primary-500 transition group text-center">
          <i class="fas fa-minus-circle text-2xl text-primary-600 mb-2 group-hover:scale-110 transition"></i>
          <span class="text-sm font-bold">Withdraw</span>
        </a>
        <a href="/transfer" class="card p-4 flex flex-col items-center hover:border-primary-500 transition group text-center">
          <i class="fas fa-paper-plane text-2xl text-primary-600 mb-2 group-hover:scale-110 transition"></i>
          <span class="text-sm font-bold">Transfer</span>
        </a>
        <a href="/trade" class="card p-4 flex flex-col items-center hover:border-primary-500 transition group text-center">
          <i class="fas fa-sync text-2xl text-primary-600 mb-2 group-hover:scale-110 transition"></i>
          <span class="text-sm font-bold">Trade</span>
        </a>
      </div>

      <div class="card bg-blue-50 dark:bg-blue-900/10 border-blue-200 dark:border-blue-800 p-6">
        <h4 class="font-bold text-blue-900 dark:text-blue-400 flex items-center">
          <i class="fas fa-lightbulb mr-2"></i> Did you know?
        </h4>
        <p class="text-sm text-blue-800 dark:text-blue-300 mt-2">
          You can earn up to 5% annual interest on your USD wallet balance.
        </p>
        <button class="mt-4 text-sm font-bold text-blue-600 dark:text-blue-400 hover:underline">Learn more <i class="fas fa-arrow-right ml-1"></i></button>
      </div>
    </div>
  </div>
</div>
