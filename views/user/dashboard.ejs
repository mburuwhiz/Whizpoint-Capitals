<div class="space-y-10">
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
    <div>
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white tracking-tight">
        Hello, <span class="text-primary-600"><%= user.email.split('@')[0] %></span>
      </h1>
      <p class="text-gray-500 dark:text-gray-400 mt-2 font-medium">Here's what's happening with your accounts today.</p>
    </div>
    <div class="flex items-center gap-3">
       <div class="text-right hidden md:block">
         <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Verification</p>
         <p class="text-sm font-bold <%= user.verificationStatus === 'Verified' ? 'text-green-600' : 'text-amber-500' %>"><%= user.verificationStatus %></p>
       </div>
       <div class="w-12 h-12 rounded-2xl bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-xl text-gray-500 border border-gray-200 dark:border-gray-700">
         <i class="fas fa-user"></i>
       </div>
    </div>
  </div>

  <!-- Wallet Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% wallets.forEach((wallet, index) => { %>
      <div class="card relative overflow-hidden border-none shadow-2xl transition-all duration-300 hover:scale-[1.02] <%= index === 0 ? 'bg-primary-600 text-white' : 'bg-white dark:bg-gray-800 text-gray-900 dark:text-white' %>">
        <div class="absolute -right-6 -top-6 opacity-10">
          <i class="fas fa-wallet text-9xl rotate-12"></i>
        </div>
        <div class="relative z-10 p-2">
          <div class="flex items-center justify-between mb-8">
            <div class="px-3 py-1 rounded-lg <%= index === 0 ? 'bg-white/20' : 'bg-primary-100 dark:bg-primary-900/30 text-primary-600' %> text-xs font-black uppercase tracking-widest">
              <%= wallet.currency %>
            </div>
            <i class="fas fa-ellipsis-v opacity-50 cursor-pointer hover:opacity-100"></i>
          </div>
          <p class="text-xs <%= index === 0 ? 'text-primary-100' : 'text-gray-400' %> font-bold uppercase tracking-widest mb-1">Available Balance</p>
          <h2 class="text-4xl font-black mb-8 tabular-nums">
            <%= wallet.balance.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
          </h2>
          <div class="flex items-center justify-between pt-4 border-t <%= index === 0 ? 'border-white/10' : 'border-gray-100 dark:border-gray-700' %>">
            <div class="flex gap-4">
               <a href="/deposit" class="text-xs font-bold hover:underline">Deposit</a>
               <a href="/withdraw" class="text-xs font-bold hover:underline">Withdraw</a>
            </div>
            <i class="fas fa-arrow-right opacity-50"></i>
          </div>
        </div>
      </div>
    <% }) %>
    <% if (wallets.length < 3) { %>
      <a href="/trade" class="card border-2 border-dashed border-gray-200 dark:border-gray-700 bg-transparent flex flex-col items-center justify-center text-center group hover:border-primary-500 transition-all">
         <div class="w-12 h-12 rounded-full bg-gray-50 dark:bg-gray-800 flex items-center justify-center mb-3 group-hover:bg-primary-600 group-hover:text-white transition-colors">
           <i class="fas fa-plus"></i>
         </div>
         <p class="text-sm font-bold text-gray-400 group-hover:text-primary-600 transition-colors">Open New Wallet</p>
      </a>
    <% } %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
    <!-- Transactions -->
    <div class="lg:col-span-8 space-y-6">
      <div class="flex items-center justify-between">
        <h3 class="text-2xl font-black text-gray-900 dark:text-white tracking-tight">Recent Activity</h3>
        <a href="/transactions" class="text-sm font-bold text-primary-600 hover:text-primary-700">View History <i class="fas fa-arrow-right ml-1"></i></a>
      </div>
      <div class="card p-0 overflow-hidden border-none shadow-xl">
        <div class="divide-y divide-gray-100 dark:divide-gray-700/50">
          <% transactions.slice(0, 5).forEach(tx => { %>
            <div class="px-6 py-5 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-2xl flex items-center justify-center <%= tx.type === 'Deposit' ? 'bg-green-100 text-green-600' : 'bg-gray-100 dark:bg-gray-700 text-gray-500' %>">
                  <i class="fas <%= tx.type === 'Deposit' ? 'fa-arrow-down' : (tx.type === 'Withdrawal' ? 'fa-arrow-up' : 'fa-exchange-alt') %>"></i>
                </div>
                <div>
                  <p class="font-black text-gray-900 dark:text-white"><%= tx.type %></p>
                  <p class="text-xs text-gray-400 font-medium"><%= tx.createdAt.toDateString() %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="font-black tabular-nums <%= tx.type === 'Deposit' ? 'text-green-600' : 'text-gray-900 dark:text-white' %>">
                  <%= tx.type === 'Deposit' ? '+' : '-' %> <%= tx.amount.toFixed(2) %> <%= tx.currency %>
                </p>
                <p class="text-[10px] font-bold uppercase tracking-widest <%= tx.status === 'Completed' ? 'text-green-500' : 'text-amber-500' %>"><%= tx.status %></p>
              </div>
            </div>
          <% }) %>
          <% if (transactions.length === 0) { %>
            <div class="px-6 py-12 text-center">
               <p class="text-gray-400 font-medium">No recent activity found.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Quick Actions & Side Info -->
    <div class="lg:col-span-4 space-y-6">
      <h3 class="text-2xl font-black text-gray-900 dark:text-white tracking-tight">Quick Actions</h3>
      <div class="grid grid-cols-2 gap-4">
        <a href="/transfer" class="card p-6 flex flex-col items-center justify-center text-center gap-3 hover:bg-primary-50 dark:hover:bg-primary-900/10 hover:border-primary-200 transition-all group">
          <div class="w-12 h-12 rounded-2xl bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center text-primary-600 group-hover:scale-110 transition-transform">
            <i class="fas fa-paper-plane text-xl"></i>
          </div>
          <span class="text-sm font-black">Transfer</span>
        </a>
        <a href="/trade" class="card p-6 flex flex-col items-center justify-center text-center gap-3 hover:bg-primary-50 dark:hover:bg-primary-900/10 hover:border-primary-200 transition-all group">
          <div class="w-12 h-12 rounded-2xl bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center text-primary-600 group-hover:scale-110 transition-transform">
            <i class="fas fa-sync text-xl"></i>
          </div>
          <span class="text-sm font-black">Trade</span>
        </a>
      </div>

      <div class="card bg-gradient-to-br from-gray-900 to-black text-white border-none p-8 overflow-hidden relative shadow-2xl">
        <div class="absolute -right-4 -bottom-4 opacity-20">
          <i class="fas fa-shield-alt text-8xl"></i>
        </div>
        <h4 class="text-xl font-black mb-4 relative z-10 tracking-tight">Level Up Your Security</h4>
        <p class="text-sm text-gray-400 mb-6 relative z-10 leading-relaxed">
          Enable Two-Factor Authentication (2FA) and Biometric Login to keep your assets safe from unauthorized access.
        </p>
        <a href="/profile/security" class="btn bg-white text-black text-xs font-black uppercase tracking-widest py-3 px-6 hover:bg-gray-200 transition-colors inline-block">Secure Now</a>
      </div>
    </div>
  </div>
</div>
