<div style="max-width: 400px; margin: 4rem auto;">
  <div class="text-center mb-8">
    <div style="font-size: 3rem; color: var(--primary); margin-bottom: 1rem;">üîê</div>
    <h2 style="font-size: 2rem; font-weight: 800;">Sign in</h2>
    <p class="text-muted">Or <a href="/register" class="text-primary">create a new account</a></p>
  </div>

  <div class="card fade-in">
    <% if (locals.error) { %>
      <div style="background: #fee2e2; color: #b91c1c; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; font-size: 0.875rem;">
        <%= error %>
      </div>
    <% } %>

    <form action="/login" method="POST" style="display: flex; flex-direction: column; gap: 1.5rem;">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div>
        <label class="font-bold" style="font-size: 0.875rem;">Email Address</label>
        <input name="email" type="email" required class="input-field" placeholder="name@example.com">
      </div>

      <div>
        <label class="font-bold" style="font-size: 0.875rem;">Password</label>
        <input name="password" type="password" required class="input-field" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
      </div>

      <div>
        <label class="font-bold" style="font-size: 0.875rem;">Security Verification</label>
        <div style="margin-bottom: 0.5rem; border: 1px solid var(--border); border-radius: 8px; overflow: hidden; background: white; display: flex; justify-content: center;">
          <%- captchaSvg %>
        </div>
        <input name="captcha" type="text" required class="input-field" placeholder="Enter characters above">
      </div>

      <div class="flex items-center justify-between" style="font-size: 0.875rem;">
        <label class="flex items-center">
          <input type="checkbox" style="margin-right: 0.5rem;"> Remember me
        </label>
        <a href="/forgot-password" class="text-primary" style="text-decoration: none;">Forgot password?</a>
      </div>

      <button type="submit" class="btn btn-primary" style="padding: 1rem; font-size: 1rem;">
        Sign in
      </button>
    </form>
  </div>
</div>
