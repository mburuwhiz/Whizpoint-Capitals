<div style="max-width: 450px; margin: 4rem auto;">
  <div class="text-center mb-8">
    <div style="font-size: 3rem; color: var(--primary); margin-bottom: 1rem;">ğŸš€</div>
    <h2 style="font-size: 2.25rem; font-weight: 800;">Create Account</h2>
    <p class="text-muted">Start your journey with <%= process.env.COMPANY_NAME %></p>
  </div>

  <div class="card fade-in shadow-xl" style="padding: 2.5rem;">
    <% if (locals.error) { %>
      <div style="background: #fee2e2; color: #b91c1c; padding: 1rem; border-radius: 8px; margin-bottom: 2rem; font-size: 0.875rem; border-left: 4px solid #ef4444;">
        <i class="fas fa-exclamation-circle mr-2"></i> <%= error %>
      </div>
    <% } %>

    <form action="/register" method="POST" style="display: flex; flex-direction: column; gap: 1.5rem;">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div>
        <label class="font-bold" style="font-size: 0.875rem; display: block; margin-bottom: 0.5rem;">Email Address</label>
        <input name="email" type="email" required class="input-field" placeholder="you@example.com">
      </div>

      <div>
        <label class="font-bold" style="font-size: 0.875rem; display: block; margin-bottom: 0.5rem;">Password</label>
        <div style="position: relative;">
          <input id="password" name="password" type="password" required class="input-field" placeholder="Create a strong password">
          <button type="button" id="togglePassword" style="position: absolute; right: 1rem; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: var(--text-muted);">
            ğŸ‘ï¸
          </button>
        </div>
      </div>

      <div>
        <label class="font-bold" style="font-size: 0.875rem; display: block; margin-bottom: 0.5rem;">Preferred Currency</label>
        <select name="preferredCurrency" class="input-field">
          <option value="USD">USD - US Dollar</option>
          <option value="KES">KES - Kenyan Shilling</option>
          <option value="UGX">UGX - Ugandan Shilling</option>
        </select>
      </div>

      <div>
        <label class="font-bold" style="font-size: 0.875rem; display: block; margin-bottom: 0.5rem;">Security Verification</label>
        <div style="margin-bottom: 0.75rem; border: 1px solid var(--border); border-radius: 8px; overflow: hidden; background: white; display: flex; justify-content: center; padding: 5px;">
          <%- captchaSvg %>
        </div>
        <input name="captcha" type="text" required class="input-field" placeholder="Enter characters above">
      </div>

      <div style="font-size: 0.75rem; color: var(--text-muted); line-height: 1.4;">
        By signing up, you agree to our <a href="/terms" class="text-primary">Terms of Service</a> and <a href="/privacy" class="text-primary">Privacy Policy</a>.
      </div>

      <button type="submit" class="btn btn-primary" style="padding: 1.1rem; font-size: 1.1rem; margin-top: 1rem; box-shadow: 0 4px 14px 0 rgba(59, 130, 246, 0.39);">
        Create My Account
      </button>
    </form>
  </div>

  <script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function (e) {
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      this.textContent = type === 'password' ? 'ğŸ‘ï¸' : 'ğŸ•¶ï¸';
    });
  </script>

  <p class="text-center mt-8 text-muted">
    Already have an account? <a href="/login" class="text-primary font-bold" style="text-decoration: none;">Sign in here</a>
  </p>
</div>
