<div style="max-width: 400px; margin: 4rem auto;">
  <div class="text-center mb-8">
    <div style="font-size: 3rem; color: var(--primary); margin-bottom: 1rem;">ðŸ”‘</div>
    <h2 style="font-size: 2rem; font-weight: 800;">Reset Password</h2>
    <p class="text-muted">Enter your email and we'll send you a link to reset your password.</p>
  </div>

  <div class="card fade-in">
    <% if (locals.message) { %>
      <div style="background: #dcfce7; color: #15803d; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; font-size: 0.875rem;">
        <i class="fas fa-check-circle mr-2"></i> <%= message %>
      </div>
    <% } %>
    <% if (locals.error) { %>
      <div style="background: #fee2e2; color: #b91c1c; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; font-size: 0.875rem;">
        <i class="fas fa-exclamation-circle mr-2"></i> <%= error %>
      </div>
    <% } %>

    <form action="/forgot-password" method="POST" style="display: flex; flex-direction: column; gap: 1.5rem;">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div>
        <label class="font-bold" style="font-size: 0.875rem;">Email Address</label>
        <input name="email" type="email" required class="input-field" placeholder="name@example.com">
      </div>

      <button type="submit" class="btn btn-primary" style="padding: 1rem; font-size: 1rem;">
        Send Reset Link
      </button>
    </form>
  </div>

  <p class="text-center mt-8 text-muted">
    Remember your password? <a href="/login" class="text-primary font-bold" style="text-decoration: none;">Back to login</a>
  </p>
</div>
