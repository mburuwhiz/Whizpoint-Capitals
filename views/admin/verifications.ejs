<div class="space-y-8">
  <div class="mb-10">
    <h1 class="text-4xl font-black text-gray-900 dark:text-white tracking-tight">Compliance & KYC Queue</h1>
    <p class="text-gray-500 dark:text-gray-400 mt-2 font-medium">Verify user identities and review submitted documentation.</p>
  </div>

  <div class="grid grid-cols-1 gap-8">
    <% if (verifications.length === 0) { %>
      <div class="card border-none shadow-2xl p-24 text-center bg-gray-50 dark:bg-gray-800/50">
         <i class="fas fa-clipboard-check text-6xl text-gray-200 mb-6 block"></i>
         <p class="text-gray-400 font-black uppercase tracking-widest text-sm">Queue is empty. All users verified.</p>
      </div>
    <% } %>

    <% verifications.forEach(v => { %>
      <div class="card border-none shadow-2xl p-0 overflow-hidden bg-white dark:bg-gray-800 flex flex-col md:flex-row">
         <!-- User Summary -->
         <div class="p-8 bg-gray-50 dark:bg-gray-900/50 md:w-1/3 border-b md:border-b-0 md:border-r border-gray-100 dark:border-gray-700">
            <div class="flex items-center gap-4 mb-8">
               <div class="w-12 h-12 rounded-2xl bg-amber-100 text-amber-600 flex items-center justify-center font-black text-xl shadow-lg shadow-amber-500/10">
                  <%= v.userId.email.charAt(0).toUpperCase() %>
               </div>
               <div>
                  <h3 class="font-black text-lg text-gray-900 dark:text-white truncate max-w-[150px]"><%= v.userId.email.split('@')[0] %></h3>
                  <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Pending Review</p>
               </div>
            </div>

            <div class="space-y-4">
               <div class="flex justify-between items-center p-3 bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700">
                  <span class="text-[10px] font-black uppercase text-gray-400">Email</span>
                  <span class="text-xs font-bold truncate max-w-[120px]"><%= v.userId.email %></span>
               </div>
               <div class="flex justify-between items-center p-3 bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700">
                  <span class="text-[10px] font-black uppercase text-gray-400">Fee Status</span>
                  <span class="px-2 py-0.5 rounded text-[10px] font-black uppercase <%= v.feePaid ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                    <%= v.feePaid ? 'Paid' : 'Unpaid' %>
                  </span>
               </div>
            </div>
         </div>

         <!-- Actions & Documents -->
         <div class="p-8 flex-1">
            <div class="mb-8">
               <h4 class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-4">Submitted Documents</h4>
               <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                  <% v.documents.forEach(doc => { %>
                    <div class="group relative card p-4 border-2 border-gray-100 dark:border-gray-700 hover:border-primary-500 transition-all cursor-pointer bg-gray-50 dark:bg-gray-900/50">
                       <div class="flex items-center gap-3">
                          <i class="fas <%= doc.mimeType === 'application/pdf' ? 'fa-file-pdf text-red-500' : 'fa-image text-blue-500' %> text-2xl"></i>
                          <div class="truncate">
                             <p class="text-xs font-black truncate"><%= doc.name %></p>
                             <p class="text-[10px] text-gray-400 uppercase font-bold tracking-tighter"><%= doc.mimeType.split('/')[1] %></p>
                          </div>
                       </div>
                       <!-- In a real app, this would link to the actual file -->
                       <div class="absolute inset-0 bg-primary-600/90 text-white flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity rounded-lg">
                          <span class="text-[10px] font-black uppercase tracking-widest">View Doc</span>
                       </div>
                    </div>
                  <% }) %>
               </div>
            </div>

            <div class="flex flex-col md:flex-row gap-4 pt-8 border-t border-gray-100 dark:border-gray-700">
               <form action="/admin/verifications/<%= v._id %>/approve" method="POST" class="flex-1">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="w-full btn bg-green-600 hover:bg-green-700 text-white py-4 rounded-2xl font-black uppercase tracking-widest shadow-xl shadow-green-500/20 transition-all">
                     Approve KYC
                  </button>
               </form>
               <div class="flex-[2]">
                  <form action="/admin/verifications/<%= v._id %>/reject" method="POST" class="flex gap-2">
                     <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                     <input type="text" name="reason" placeholder="Mandatory rejection reason..." required class="flex-1 bg-gray-100 dark:bg-gray-900 border-none rounded-2xl px-6 font-bold text-sm outline-none focus:ring-2 focus:ring-red-500 transition-all">
                     <button type="submit" class="btn bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-2xl font-black uppercase tracking-widest shadow-xl shadow-red-500/20 transition-all whitespace-nowrap">
                        Reject
                     </button>
                  </form>
               </div>
            </div>
         </div>
      </div>
    <% }) %>
  </div>
</div>
