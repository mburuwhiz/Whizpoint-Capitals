<div class="space-y-8">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Admin Command Center</h1>
    <div class="flex space-x-3">
       <span class="bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-400 px-4 py-2 rounded-lg text-sm font-bold">
         <i class="fas fa-shield-alt mr-2"></i> System Health: Optimal
       </span>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="card border-l-4 border-l-primary-600">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-bold text-gray-500 uppercase tracking-widest">Total Users</p>
          <h3 class="text-4xl font-extrabold mt-1"><%= userCount %></h3>
        </div>
        <div class="p-4 bg-primary-50 dark:bg-primary-900/20 rounded-2xl text-primary-600">
          <i class="fas fa-users text-2xl"></i>
        </div>
      </div>
    </div>

    <div class="card border-l-4 border-l-yellow-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-bold text-gray-500 uppercase tracking-widest">Pending KYC</p>
          <h3 class="text-4xl font-extrabold mt-1"><%= pendingVerifications %></h3>
        </div>
        <div class="p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-2xl text-yellow-600">
          <i class="fas fa-user-check text-2xl"></i>
        </div>
      </div>
    </div>

    <div class="card border-l-4 border-l-green-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs font-bold text-gray-500 uppercase tracking-widest">Global Transact.</p>
          <h3 class="text-4xl font-extrabold mt-1"><%= totalTransactions %></h3>
        </div>
        <div class="p-4 bg-green-50 dark:bg-green-900/20 rounded-2xl text-green-600">
          <i class="fas fa-exchange-alt text-2xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <a href="/admin/users" class="card hover:shadow-lg transition group border-none bg-white dark:bg-gray-800">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition">
          <i class="fas fa-user-cog"></i>
        </div>
        <span class="font-bold text-gray-700 dark:text-gray-300">Manage Users</span>
      </div>
    </a>
    <a href="/admin/verifications" class="card hover:shadow-lg transition group border-none bg-white dark:bg-gray-800">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center text-orange-600 group-hover:bg-orange-600 group-hover:text-white transition">
          <i class="fas fa-id-card"></i>
        </div>
        <span class="font-bold text-gray-700 dark:text-gray-300">KYC Reviews</span>
      </div>
    </a>
    <a href="/admin/disputes" class="card hover:shadow-lg transition group border-none bg-white dark:bg-gray-800">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 rounded-xl bg-red-100 dark:bg-red-900/30 flex items-center justify-center text-red-600 group-hover:bg-red-600 group-hover:text-white transition">
          <i class="fas fa-gavel"></i>
        </div>
        <span class="font-bold text-gray-700 dark:text-gray-300">Disputes</span>
      </div>
    </a>
    <a href="/admin/logs" class="card hover:shadow-lg transition group border-none bg-white dark:bg-gray-800">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 rounded-xl bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition">
          <i class="fas fa-terminal"></i>
        </div>
        <span class="font-bold text-gray-700 dark:text-gray-300">Audit Logs</span>
      </div>
    </a>
  </div>

  <!-- Recent Activity Teaser -->
  <div class="card">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-bold">Global Activity Monitor</h2>
      <span class="text-xs font-bold text-primary-600 uppercase tracking-widest"><i class="fas fa-circle text-[8px] mr-1 animate-pulse"></i> Live Updates</span>
    </div>
    <div class="space-y-4">
       <!-- Placeholder for live logs -->
       <p class="text-center text-gray-400 py-12 italic">System activity logs streaming...</p>
    </div>
  </div>
</div>
